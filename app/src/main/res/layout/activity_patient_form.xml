<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariamusman.fyp.PatientForm">

    <TextView
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="40dp"
        android:layout_toStartOf="@+id/efname"
        android:text="First Name"
        android:textColor="#000000"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/efname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fname"
        android:layout_alignStart="@+id/submit"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fname"
        android:layout_below="@+id/fname"
        android:layout_marginTop="35dp"
        android:text="Last Name"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/elname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lname"
        android:layout_alignBottom="@+id/lname"
        android:layout_alignStart="@+id/efname"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fname"
        android:layout_below="@+id/elname"
        android:layout_marginTop="25dp"
        android:text="Phone \nNumber"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phone"
        android:layout_alignBottom="@+id/phone"
        android:layout_alignStart="@+id/elname"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/email"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/lname"
        android:layout_below="@+id/phone"
        android:layout_marginTop="18dp"
        android:text="Email Address"
        android:textColor="#000000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/eemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ephone"
        android:layout_alignTop="@+id/email"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phone"
        android:layout_below="@+id/email"
        android:layout_marginTop="34dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/epassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eemail"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/password"
        android:layout_marginTop="35dp"
        android:text="Age"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/eage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/age"
        android:layout_alignStart="@+id/epassword"
        android:ems="10"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/age"
        android:layout_marginStart="137dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/mybutton"
        android:text="Join"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarOnPForm"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="156dp"
        android:layout_marginTop="246dp" />


</RelativeLayout>
