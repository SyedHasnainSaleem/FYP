<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariamusman.fyp.Games"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTeal"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"/>

    <Button
        android:id="@+id/btnMemory"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="78dp"
        android:layout_toStartOf="@+id/btnProb"
        android:background="@drawable/mybutton"
        android:text="Memory"
        android:textSize="20dp" />
    />

    <Button
        android:id="@+id/btnProb"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnMemory"
        android:layout_marginEnd="20dp"
        android:background="@drawable/mybutton"
        android:text="Problem \nSolving"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSpeed"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/btnMemory"
        android:layout_below="@+id/btnMemory"
        android:layout_marginTop="50dp"
        android:background="@drawable/mybutton"
        android:text="Speed"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnAttention"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/btnProb"
        android:layout_alignTop="@+id/btnSpeed"
        android:background="@drawable/mybutton"
        android:text="Attention"
        android:textSize="20dp" />

</RelativeLayout>
