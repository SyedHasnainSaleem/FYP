<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariamusman.fyp.Home"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorTeal"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"/>

    <Button
        android:id="@+id/btnGames"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_above="@+id/btnTools"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="41dp"
        android:background="@drawable/mybutton"
        android:text="Games"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnProgress"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/btnGames"
        android:layout_marginStart="28dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/btnNz"
        android:background="@drawable/mybutton"
        android:text="Progress"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnTools"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/btnGames"
        android:layout_centerVertical="true"
        android:background="@drawable/mybutton"
        android:text="Tools"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnWB"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/btnProgress"
        android:layout_centerVertical="true"
        android:background="@drawable/mybutton"
        android:text="WellBeing"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnNz"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/btnTools"
        android:layout_below="@+id/btnTools"
        android:layout_marginTop="49dp"
        android:background="@drawable/mybutton"
        android:text="Namaaz"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnLocat"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/btnNz"
        android:layout_alignStart="@+id/btnWB"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/mybutton"
        android:text="Location"
        android:textSize="20dp" />


</RelativeLayout>
