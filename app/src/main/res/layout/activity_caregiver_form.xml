<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariamusman.fyp.CaregiverForm">


    <TextView
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="44dp"
        android:layout_toStartOf="@+id/efname"
        android:text="First Name"
        android:textColor="#000000"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/efname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fname"
        android:layout_alignBottom="@+id/fname"
        android:layout_alignStart="@+id/submit"
        android:layout_marginStart="7dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fname"
        android:layout_below="@+id/fname"
        android:layout_marginTop="35dp"
        android:text="Last Name"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/elname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lname"
        android:layout_alignBottom="@+id/lname"
        android:layout_alignStart="@+id/efname"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fname"
        android:layout_below="@+id/elname"
        android:layout_marginTop="38dp"
        android:text="Phone \nNumber"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/ephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phone"
        android:layout_alignStart="@+id/elname"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/email"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/lname"
        android:layout_below="@+id/ephone"
        android:layout_marginTop="28dp"
        android:text="Email Address"
        android:textColor="#000000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/eemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email"
        android:layout_alignStart="@+id/ephone"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phone"
        android:layout_below="@+id/email"
        android:layout_marginTop="44dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/epassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:layout_alignStart="@+id/eemail"
        android:ems="10"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/submit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/mybutton"
        android:text="Join"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarOnCForm"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp" />

    <Spinner
        android:id="@+id/patientNameSpinner"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:layout_marginBottom="140dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fname"
        android:layout_alignBottom="@+id/patientNameSpinner"
        android:text="Select Patient"
        android:textColor="#000000"
        android:textSize="20dp"/>

</RelativeLayout>
