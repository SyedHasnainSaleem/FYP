<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mariamusman.fyp.Register"
    android:background="#ffffff">

    <Button
        android:id="@+id/SignCare"
        android:layout_width="207dp"
        android:layout_height="159dp"
        android:layout_alignStart="@+id/SignPat"
        android:layout_below="@+id/TxtSignUp"
        android:layout_marginTop="50dp"
        android:background="@drawable/mybutton"
        android:backgroundTint="@color/colorTeal"
        android:text="Caregiver"
        android:textAppearance="@style/Widget.AppCompat.ActionMode"
        android:textColor="#000000"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="122dp" />

    <Button
        android:id="@+id/SignPat"
        android:layout_width="207dp"
        android:layout_height="159dp"
        android:layout_below="@+id/SignCare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:background="@drawable/mybutton"
        android:text="Patient"
        android:textAppearance="@style/Widget.AppCompat.ActionMode"
        android:textColor="#000000"
        android:textSize="30dp"
        android:backgroundTint="@color/colorTeal"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:id="@+id/TxtSignUp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="26dp"
        android:text="SignUp As"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="#003400"
        android:textSize="35dp"

        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="36dp" />

</RelativeLayout>
